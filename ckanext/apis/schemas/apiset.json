{
  "scheming_version": 1,
  "dataset_type": "apiset",
  "about": "API collection schema",
  "about_url": "http://github.com/vrk-kpa/ckanext-apis",
  "dataset_fields": [
    {
      "field_name": "title_translated",
      "label": "Title",
      "preset": "fluent_core_title_translated",
      "form_languages": ["fi", "en", "sv"],
      "form_placeholder":"eg. A descriptive title",
      "only_default_lang_required": true,
      "description": "A short and descriptive title for the API collection.",
      "group_title": "Title of the API collection"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug_ex",
      "form_placeholder": "eg. my-apis",
      "form_attrs": {
        "class": "form-control"
      },
      "divider": true
    },
    {
      "field_name": "notes_translated",
      "preset": "fluent_core_markdown_translated",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "en", "sv"],
      "form_attrs": {
        "class": "form-control"
      },
      "label": "Description",
      "display_snippet": null,
      "only_default_lang_required": true,
      "description": "An universal, compact and easy to understand description of the added API collection.",
      "divider": true,
      "group_title": "Description of for the API collection"
    },
    {
      "field_name": "keywords",
      "label": "Tags",
      "form_placeholder":"eg. Maps",
      "form_languages": ["fi", "en", "sv"],
      "preset": "fluent_vocabulary_with_autocomplete",
      "validators": "fluent_tags create_fluent_tags(keywords)",
      "form_attrs": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/tag/autocomplete?incomplete=?&vocabulary_id=keywords"
      },
      "description": "Keywords or tags through which users are able to find this dataset easily through the search page or other datasets which have the same tag.",
      "only_default_lang_required": true,
      "group_title": "Keywords and categories",
      "divider": true
    },
    {
      "field_name": "private",
      "label": "Visibility",
      "form_snippet": "private.html",
      "display_snippet": null,
      "validators": "boolean_validator",
      "description": "Private APIs will only be seen by the logged in users of the API's organization. Public APIs will be listed publicly through the search.",
      "group_title": "Other information"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "display_snippet": "license.html",
      "validators": "not_empty",
      "required": true
    },
    {
      "field_name": "terms_of_service",
      "label": "Terms of Service",
      "preset": "fluent_markdown",
      "only_default_lang_required": true,
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "en", "sv"],
      "form_attrs": {
        "class": "form-control"
      }
    },
    {
      "field_name": "access_rights",
      "label": "Access Rights",
      "preset": "fluent_markdown",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "en", "sv"],
      "form_attrs": {
        "class": "form-control"
      },
      "divider": true
    },
    {
      "field_name": "api_provider",
      "label": "API provider",
      "form_placeholder": "My organization",
      "form_attrs": {
        "class": "form-control"
      },
      "required": true,
      "group_title": "Provider and maintainer of the API collection"
    },
    {
      "field_name": "api_provider_email",
      "label": "API provider email",
      "form_placeholder": "joe@example.com",
      "form_attrs": {
        "class": "form-control"
      },
      "display_snippet": "email.html",
      "validators": "not_empty email_validator",
      "display_email_name_field": "api_provider",
      "required": true
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization_ex",
      "description": "The organization which owns the API."
    }
  ],
  "resource_fields": [
    {
      "field_name": "name_translated",
      "label": "Name",
      "preset": "fluent_core_translated_extended",
      "form_languages": ["fi", "en", "sv"],
      "form_placeholder":"eg. January 2011 Gold Prices",
      "form_attrs": {
        "class": "form-control"
      },
      "description": "A short and descriptive name for the API."
    },
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload_ex",
      "form_attrs": {
        "class": "form-control"
      },
      "description": "A file or url which describes the API endpoint.",
      "required": true
    },
    {
      "field_name": "description_translated",
      "label": "Description",
      "preset": "fluent_core_markdown_translated",
      "validators": "fluent_text",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "en", "sv"],
      "form_attrs": {
        "class": "form-control"
      },
      "description": "An universal, compact and easy to understand description of the added API."
    },
    {
      "field_name": "documentation_translated",
      "label": "Documentation",
      "preset": "fluent_markdown",
      "only_default_lang_required": true,
      "form_placeholder": "eg. A detailed description of using the API",
      "form_languages": ["fi", "en", "sv"],
      "form_attrs": {
        "class": "form-control"
      }
    },
    {
      "field_name": "registration_required",
      "label": "Registration required",
      "preset": "select",
      "choices":[
        {
          "value": "false",
          "label": "No"
        },
        {
          "value": "true",
          "label": "Yes"
        }
      ],
      "required": true,
      "validators": "boolean_validator"
    },
    {
      "field_name": "update_frequency",
      "label": "Update frequency",
      "form_placeholder":"eg. every second week",
      "form_languages": ["fi", "en", "sv"],
      "preset": "fluent_vocabulary_with_autocomplete",
      "validators": "fluent_tags create_fluent_tags(update_frequency)",
      "form_attrs": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/tag/autocomplete?incomplete=?&vocabulary_id=update_frequency"
      },
      "description": "A short description of how frequently the data in the API will get updated."
    }
  ]
}

